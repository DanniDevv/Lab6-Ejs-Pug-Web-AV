              p Email Me:
              a(href='mailto:') dante.rodriguez.c@tecsup.edu.pe
            .contact__info
              p Call Me:
              a(href='tel:') +51 900100738
            .contact__info
              p Follow Me:
              ul.social
                li
                  a(href='https://www.linkedin.com/in/dante-samuel-rodriguez-chambi-444041279/')
                    i.bi.bi-linkedin
                li
                  a(href='https://github.com/DanniDevv?tab=repositories')
                    i.bi.bi-github
                li
                  a(href='https://www.instagram.com/dantesamuelrodriguez/')
                    i.bi.bi-instagram
                li
                  a(href='https://www.facebook.com/profile.php?id=100041512209159')
                    i.bi.bi-facebook
          .contact__right
            form.contact__form(action='recption.html', method='post')
              .contact__fields
                label(for='name') Name
                input#name(type='name', name='name', placeholder='Your Name')
              .contact__fields
                label(for='email') Email
                input#email(type='email', name='email', placeholder='Email Address')
              .contact__fields
                label(for='message') Message
                textarea#message(name='message', placeholder='Write Message...')
              .contact__fields
                button.btn.btn--main(type='submit')
                  | Send Message 
                  i.bi.bi-arrow-right
